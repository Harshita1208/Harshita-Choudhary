{{ 'gift-banner.css' | asset_url | stylesheet_tag }}

<div class="color-{{ section.settings.color_scheme }} gradient gift-banner-wrapper">
  <div class="section-{{ section.id }}-padding">
    <div class="main-slideshow-banner">
      {% if section.settings.image != blank %}
      <div class="main-banner-image">
        <img src="{{ section.settings.image | img_url: 'master'}}" alt="{{ shop.name}}" width="100%" height="100%" /> 
      </div>
      {% endif %}
      <div class="main-banner-content-wrapper">
      <div class="main-banner-content">
       {% if section.settings.heading != blank %}
       <h1>{{ section.settings.heading }}</h1>
       {% endif %}
       {% if section.settings.content != blank %}
       <div class="banner-subcontent">
         {{ section.settings.content }}
       </div>
       {% endif %}
       {% if section.settings.button_text != blank and section.settings.button_url != blank %}
       <div class="button button-primary">
        <a href="{{ section.settings.button_url }}">{{ section.settings.button_text }}</a>
       </div>
       {% endif %}
      </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Gift Banner",
  "tag": "section",
  "class": "section gift-banner-section",
  "settings": [
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button Url"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    }
  ],
  "presets": [
    {
      "name": "Gift Banner"
    }
  ]
}
{% endschema %}
