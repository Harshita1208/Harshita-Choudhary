{{ 'gift-banner.css' | asset_url | stylesheet_tag }}

<div class="color-{{ section.settings.color_scheme }} gradient gift-banner-wrapper">
  <div class="section-{{ section.id }}-padding">
    <div class="main-slideshow-banner">
     
      {% if section.settings.image_first != blank %}
      <div class="main-banner-image {% if section.settings.show_image %} show_image {% endif %}">
        <img src="{{ section.settings.image_first | img_url: 'master'}}" alt="{{ shop.name}}" width="100%" height="auto" loading="lazy" /> 
      </div>
      {% endif %}
      <div class="main-banner-content-wrapper">
        <div class="main-banner-content left-column">
          {% if section.settings.heading != blank %}
          <h1 class="no-margin">{{ section.settings.heading }}</h1>
          {% endif %}
          {% if section.settings.content != blank %}
          <div class="banner-subcontent">
            {{ section.settings.content }}
          </div>
          {% endif %}
          {% if section.settings.button_text != blank and section.settings.button_url != blank %}
          <div class="button button-primary btn desktop-btn no-margin">
            <a href="{{ section.settings.button_url }}">{{ section.settings.button_text }}</a>
            {% render 'right-arrow' %}
          </div>
          {% endif %}
        </div>
        <div class="right-column">
          {% if section.settings.image_second != blank %}
            <div class="image-container">
              <img class="natural-image" src="{{ section.settings.image_second | img_url: 'master'}}" alt="{{ shop.name}}" loading="lazy" />
            </div>
          {% endif %}
          {% if section.settings.button_text != blank and section.settings.button_url != blank %}
            <div class="button button-primary btn mobile-btn">
              <a href="{{ section.settings.button_url }}">{{ section.settings.button_text }}</a>
              {% render 'right-arrow' %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Gift Banner",
  "tag": "section",
  "class": "section gift-banner-section",
  "settings": [
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image_first",
      "label": "Image"
    },
    {
      "type": "checkbox",
      "id": "show_image",
      "label": "Show Image On Mobile",
      "default": "false"
    },
    {
      "type": "image_picker",
      "id": "image_second",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button Url"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    }
  ],
  "presets": [
    {
      "name": "Gift Banner"
    }
  ]
}
{% endschema %}
